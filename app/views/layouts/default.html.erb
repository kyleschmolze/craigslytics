<!DOCTYPE html>
<html lang="en">
  <head>
    <%= render partial: 'layouts/head' %>
  </head>
  <body class='application-body <%= @body_class %>'> 

    <div class="navbar navbar-fixed-top navbar-inverse" id="analysis_navbar">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="/">Rentalyzer</a>
          <ul class="nav pull-right">
            <% if user_signed_in? %>
            <li class='dropdown'>
              <a href='#' class='dropdown-toggle' data-toggle='dropdown'> <%= current_user.email %>  <b class='caret'></b></a>
              <ul class="dropdown-menu">
                <li>
                <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
                </li>
              </ul>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="span12" data-spy="scroll" data-target="#analysis_navbar" data-offset="30">
          <%= yield %>
        </div>
      </div>
    </div>

  </body>
</html>
