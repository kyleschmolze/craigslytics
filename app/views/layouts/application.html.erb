<!DOCTYPE html>
<html lang="en">
  <head>
    <%= render partial: 'layouts/head' %>
  </head>
  <body class='application-body <%= @body_class %>'> 

    <div class="navbar navbar-fixed-top navbar-inverse" id="analysis_navbar">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">Rentalyzer</a>
            <div class="container-fluid nav-collapse"> 
              <ul class="nav">
                <% if params[:action] == 'show' %>
                  <li>
                    <a href="#overview">overview</a>
                  </li>
                  <li>
                    <a href="#low">low</a>
                  </li>
                  <li>
                    <a href="#middle">middle</a>
                  </li>
                  <li>
                    <a href="#high">high</a>
                  </li>
                <% end %>
              </ul>
            </div>
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span12" data-spy="scroll" data-target="#analysis_navbar" data-offset="30">
          <% if !notice.blank? %>
            <div style='margin-top:15px;' class='alert'><%=notice%></div>
          <% end %>
        
        <%= yield %>
        </div>
      </div>
    </div>

  </body>
</html>
